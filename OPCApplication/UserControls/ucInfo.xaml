<UserControl x:Class="OPCApplication.UserControls.ucInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OPCApplication.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="LightBlue">
    <StackPanel  Margin="5">
        <StackPanel Margin="0,5">
            <TextBlock>Tag：</TextBlock>
            <TextBlock Name="txbTags" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <StackPanel Margin="0,5">
            <TextBlock>地址：</TextBlock>
            <TextBlock Name="txbAddress"></TextBlock>
        </StackPanel>
        <StackPanel Margin="0,5">
            <TextBlock>值：</TextBlock>
            <TextBlock Name="txbValue"></TextBlock>
        </StackPanel>
        <StackPanel Margin="0,5">
            <TextBlock>说明：</TextBlock>
            <TextBox Name="txbInfo" TextWrapping="Wrap" Margin="0,5"></TextBox>
            <Button Name="btnSave" Click="btnSave_Click">保存</Button>
        </StackPanel>
    </StackPanel>
    </Grid>
</UserControl>
